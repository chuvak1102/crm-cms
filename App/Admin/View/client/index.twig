{% extends 'layout.twig' %}
{% block content %}
    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-hover issue-tracker checkbox-container">
                                <tbody>
                                <tr>
                                    <th>Название</th>
                                    <th>Адрес</th>
                                    <th>Контакты</th>
                                </tr>
                                    {% for i in clients %}
                                        <tr>
                                            <td style="width: 10%">{{ i.name }}</td>
                                            <td style="width: 50%">{{ i.city }}, {{ i.street }}, {{ i.house }}, {{ i.block }}</td>
                                            <td style="width: 10%">{{ i.phone }}, {{ i.login }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{#    {{ dump(clients) }}#}
{% endblock %}