{% extends 'layout.twig' %}
{% block content %}
    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-hover issue-tracker checkbox-container">
                                <tbody>
                                <tr>
                                    <th>Дата</th>
                                    <th>Имя</th>
                                    <th>Телефон</th>
                                </tr>
                                    {% for i in callback %}
                                        <tr>
                                            <td>{{ i.created | date('d-m-Y h:i') }}</td>
                                            <td>{{ i.name }}</td>
                                            <td>{{ i.phone }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}