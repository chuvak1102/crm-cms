{% extends 'layout.twig' %}
{% block content %}
    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-hover issue-tracker checkbox-container">
                                <tbody>
                                <tr>
                                    <th>Дата</th>
                                    <th>Тираж</th>
                                    <th>Красочность печати</th>
                                    <th>Имя</th>
                                    <th>Телефон</th>
                                    <th>Почта</th>
                                    <th>Комментарий</th>
                                </tr>
                                {% for i in design %}
                                    <tr>
                                        <td>{{ i.date | date('d-m-Y h:i') }}</td>
                                        <td>{{ i.count }}</td>
                                        <td>{{ i.color }}</td>
                                        <td>{{ i.name }}</td>
                                        <td>{{ i.phone }}</td>
                                        <td>{{ i.email }}</td>
                                        <td>{{ i.comment }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {#    {{ dump(clients) }}#}
{% endblock %}